---
import BaseLayout from "../../../../../../layouts/BaseLayout.astro";
import MetaWhatsAppLab from "../../../../../../components/demo/messaging/providers/meta/whatsapp/MetaWhatsAppLab.svelte";

const branding = {
  displayName: "Meta WhatsApp Provider Lab",
  logoUrl: "/logo-placeholder.svg",
  primaryColor: "#0F766E",
  secondaryColor: "#22C55E",
  accentColor: "#16A34A",
